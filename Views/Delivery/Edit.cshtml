@model Transport.ViewModels.EditDeliveryViewModel
@{
    ViewBag.Title = "Edit Delivery";
}

<h2>Edit delivery</h2>
<div>
    @using(Html.BeginForm("Edit", "Delivery"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.NewAddressFromId)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.NewAddressFromId, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.NewAddressToId)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.NewAddressToId, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.NewCustomerId)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.NewCustomerId, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.NewPaymentStatus)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.NewPaymentStatus, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.NewDeliveryStatus)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.NewDeliveryStatus, new { @class = "form-control" })</div>
        </div><br />
        <input type="submit" value="Zapisz" class="btn btn-primary" />
    }

</div>